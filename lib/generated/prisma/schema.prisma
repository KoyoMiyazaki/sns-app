generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String    @id @default(cuid())
  content   String
  imageUrl  String?
  createdAt DateTime  @default(now())
  comments  Comment[]
  likes     Like[]
  userId    String
}

model Comment {
  id        String   @id @default(cuid())
  postId    String
  username  String
  content   String
  createdAt DateTime @default(now())

  post Post @relation(fields: [postId], references: [id])
}

model Like {
  id        String   @id @default(cuid())
  postId    String
  userId    String
  createdAt DateTime @default(now())

  post Post @relation(fields: [postId], references: [id])

  @@unique([postId, userId])
}
